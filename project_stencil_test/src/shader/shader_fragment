#version 330 core

in vec2 TexCoord;
in vec3 outColor;

uniform sampler2D texture0;
uniform int		  task;			// 1：绘制坐标系，2：绘制箱子，3：绘制地板

out vec4 FragColor;

void main()
{
	if(task == 1)
	{
		FragColor = vec4(outColor, 1.0);
	}
	else if(task == 3)
	{
		FragColor = vec4(0.04, 0.28, 0.26, 1.0);
	}
	else
	{
		FragColor = texture(texture0, TexCoord);
	}
};