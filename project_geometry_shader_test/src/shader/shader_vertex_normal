#version 330 core
layout (location = 0) in vec3 aPos;
layout (location = 1) in vec3 aNormal;
layout (location = 2) in vec2 aTexCoords;

uniform mat4 modelMatrix;					// 模型变换矩阵
uniform mat4 viewMatrix;					// 视图变换矩阵
uniform mat4 projectionMatrix;				// 投影变换矩阵

out vec3 outNormal;

void main()
{
	gl_Position = viewMatrix * modelMatrix * vec4(aPos, 1.0);
	outNormal   = normalize(mat3(transpose(inverse(modelMatrix))) * aNormal);
}