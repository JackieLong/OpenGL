#version 330 core

in vec4 ourColor;
in vec2 TexCoord;

uniform sampler2D texture0;		// 纹理单元ID，值0对应GL_TEXTURE0纹理单元，以此类推，通过glUniform1i设置，，
uniform sampler2D texture1;

out vec4 FragColor;

void main()
{
	FragColor = mix(texture(texture0, TexCoord),	// 在同一个坐标顶点叠加两张纹理
					texture(texture1, TexCoord), 
					0.4)	
				* ourColor;							// 再叠加顶点数据中的颜色值
};